<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
    <persistence-unit firstName="default" transaction-type="RESOURCE_LOCAL">
        <properties>
            <property firstName="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
            <property firstName="javax.persistence.jdbc.url"
                      value="jdbc:derby:./data/klusterfuck;create=true" />

            <property firstName="hibernate.hbm2ddl.auto" value="update"/>
            <property firstName="hibernate.show_sql" value="hibernate.show_sql"/>
        </properties>

    </persistence-unit>
</persistence>